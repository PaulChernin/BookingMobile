<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.MyBookingActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_height="224dp" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Название"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/guestsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 комната" />

    <TextView
        android:id="@+id/with_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Завтрак включен" />

    <TextView
        android:id="@+id/dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="С 12.05.22. по 13.05.22" />

    <TextView
        android:id="@+id/names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Имя Фамилия" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textSize="21dp"
        android:text="К оплате: 5 000 р" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отменить бронирование"
        tools:layout_editor_absoluteX="8dp" />

</LinearLayout>